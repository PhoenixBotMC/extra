{
  "compilerOptions": {
      "allowJs": true,
      "target": "ES2020",
      "outDir": ".tsbuild",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "resolveJsonModule": true,
      "removeComments": true
  },
  "include": [
      "./src/**/*"
  ]
}